/* 组件常用css */
.br {
  border-radius: 4rpx;
}
.card {
  border-radius: 4rpx;
  box-shadow: rgb(0 0 0 / 20%) 0px 2px 1px -1px,
    rgb(0 0 0 / 14%) 0px 1px 1px 0px, rgb(0 0 0 / 12%) 0px 1px 3px 0px;
  background-color: #ffffff;
  padding: 40rpx;
  text-align: justify;
  color: #333;
  line-height: 1.5;
}
.colorCard {
  background: linear-gradient(
    135deg,
    rgba(139, 163, 199, 0.8),
    rgb(139, 163, 199)
  );
  color: #ffffff;
}
.blackCard {
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.7), rgb(0, 0, 0));
  color: #ffffff;
}

.hr {
  margin: 10rpx 0;
  border-top: 1px solid #ccc;
}
.link {
  color: #216cd3;
  text-decoration: none;
  border-bottom: 1px dashed;
}
.placeholder {
  height: 160rpx;
}
.img {
  width: 500rpx;
  margin: 20rpx auto;
}
.section {
  margin: 40rpx 0 80rpx;
}
.input {
  margin: 30rpx 0;
  border-bottom: 1px solid #666;
  padding: 20rpx 0;
  width: 100%;
}
.icon {
  width: 80rpx;
  height: 80rpx;
}
.arrow {
  width: 32rpx;
  height: 32rpx;
}
.area {
  margin: 100rpx auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.tag {
  padding: 4rpx 20rpx 6rpx;
  border-radius: 30rpx;
  background-color: #07c160;
  color: #fff;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}
